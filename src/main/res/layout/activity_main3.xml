<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tegbrant.test_2.MainActivity3"
    tools:showIn="@layout/activity_main3"
    android:background="#aae517">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/rubrik_2"
            android:textSize="70sp"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp"
            android:text="Detalj1"
            android:textSize="32sp"
            android:id="@+id/button1"
            android:onClick="nextView"
            android:layout_gravity="center_horizontal"
            android:clickable="true" />

        <Button
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:layout_marginBottom="50dp"
            android:text="Detalj2"
            android:textSize="32sp"
            android:id="@+id/button2"
            android:onClick="nextView"
            android:layout_gravity="center_horizontal"
            android:clickable="true" />

        <Button
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:layout_marginBottom="50dp"
            android:text="Detalj3"
            android:textSize="32sp"
            android:id="@+id/button3"
            android:onClick="nextView"
            android:layout_gravity="center_horizontal"
            android:clickable="true" />

        <Button
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:layout_marginBottom="50dp"
            android:text="Detalj4"
            android:textSize="32sp"
            android:id="@+id/button4"
            android:onClick="nextView"
            android:layout_gravity="center_horizontal"
            android:clickable="true" />

        <Button
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:layout_marginBottom="50dp"
            android:text="Detalj5"
            android:textSize="32sp"
            android:id="@+id/button5"
            android:onClick="nextView"
            android:layout_gravity="center_horizontal"
            android:clickable="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/colorGreen"
                android:endColor="@color/colorBackgroundGreen"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/colorGray" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/colorButtonGreen"
                android:startColor="@color/colorBackgroundGreen"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/colorGray" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/colorButtonGreen"
                android:startColor="@color/colorGreen"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/colorGray" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
    </item>
    <item android:drawable="@drawable/return_arrow" />
    </layer-list>